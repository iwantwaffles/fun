@model IEnumerable<MyMvcSite.Domain.Models.Forum>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<h2>Forums</h2>
<br />
<h2 style="color:red">@ViewBag.Label</h2>
<br />
<h3>@ViewBag.Message</h3>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ForumID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ForumID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ForumID })
        </td>
    </tr>
}

</table>
